{
    "name": "custom/safari",
    "description": "Website kvetinysafari.cz",
    "license": "proprietary",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "path",
            "url": "/root/custom/themes/kvetinysafari",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "path",
            "url": "/root/custom/themes/sperkysafari",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "composer/installers": "~1.0",
        "drupal/core-composer-scaffold": "^9.0",
        "drupal/core-recommended": "^9.0",
        "drupal/csp": "^1.12",
        "drupal/ctools": "^3.4",
        "drupal/file_mdm": "^2.1",
        "drupal/fontawesome": "^2.16",
        "drupal/pathauto": "^1.8",
        "drupal/redirect": "^1.6",
        "drupal/image_effects": "^3.0",
        "drupal/seckit": "^1.2",
        "drupal/token": "^1.7",
        "custom-theme/kvetinysafari": "^1.0.0",
        "custom-theme/sperkysafari": "^1.0.0",
        "drush/drush": "^10.2.2",
        "drupal/matomo": "^1.11",
        "drupal/schema_metatag": "^2.1",
        "drupal/simple_sitemap": "^3.6",
        "drupal/svg_image": "^1.15"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true
        }
    },
    "extra": {
        "drupal-scaffold": {
            "allowed-packages": [
                "drupal/core"
            ],
            "locations": {
                "web-root": "www/"
            }
        },
        "installer-paths": {
            "www/core": [
                "type:drupal-core"
            ],
            "www/libraries/{$name}": [
                "type:drupal-library"
            ],
            "www/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "www/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "www/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "www/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "www/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        }
    },
    "scripts": {
        "build-assets": [
            "yarn --cwd ./www/themes/custom/kvetinysafari install",
            "yarn --cwd ./www/themes/custom/kvetinysafari build",
            "yarn --cwd ./www/themes/custom/sperkysafari install",
            "yarn --cwd ./www/themes/custom/sperkysafari build"
        ],
        "post-install-cmd": [
            "@build-assets"
        ],
        "post-update-cmd": [
            "@build-assets"
        ]
    }
}
